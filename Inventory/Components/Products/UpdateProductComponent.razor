@using Entities
@using Business

@inject NavigationManager NavManage

<EditForm Model="oProduct">
    <div class="form-group">
        <label>Producto:</label>
        <InputText class="form-control" @bind-Value="oProduct.ProductName" />
    </div>
    <div class="form-group">
        <label>Descripcion:</label>
        <InputTextArea class="form-control" @bind-Value="oProduct.ProductDescription" />
    </div>
    <div class="form-group">
        <label>Categoria::</label>
        <InputSelect class="form-control" @bind-Value="oProduct.CategotyId">
            @foreach (var category in categories)
            {
                <option value="@category.CategotyId ">@category.CategoryName</option>
            }
        </InputSelect>
    </div>
    <input type="button" value="Actualizar Producto" @onclick="UpdateProduct" />

</EditForm>


@code {
    [Parameter]
    public string IdProduct { get; set; }
    ProductEntity oProduct = new ProductEntity();
    List<CategoryEntity> categories = new List<CategoryEntity>();

    protected override async Task OnInitializedAsync()
    {
        categories = BusinnesCategory.CategoryList();
        oProduct = BusinnesProduct.ProductById(IdProduct);
    }
    private void UpdateProduct() 
    {
        BusinnesProduct.UpdateProduct(oProduct);
        NavManage.NavigateTo("product/list");
    }
}
